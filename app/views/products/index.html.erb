<h1><center>Total number of Products (<%= @products.length %>)</center></h1>

<%= link_to 'Add New Product', new_product_path %>

<p class="page-entries"><%= page_entries_info @products %>


<%= form_tag products_path, method: :get, authentication: false, id: 'search-form' do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search" %>
<% end %>

<ul id="products">
  <%= render @products %>
</ul>

<%= paginate @products %>

