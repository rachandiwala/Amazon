<h1><center>Products#show</center></h1>


<div id="nav">
  <div class="container">
    
    <ul class="pull-left">

<li><%= link_to "Back to Products", products_path %> </li>
<li><%= link_to "Edit Product", edit_product_path(@product) %> </li>
<li><%= link_to "Delete Product", @product, method: :delete, date: {confirm: "Are you sure you want to delete this product?"} %></li>
   
    </ul> 
   </div>
  
</div>
    
<div id="Product-info">
<div class="container">
<div class "center_prod_box">
<h3> Product Information</h3>

<p>Product Name: <%= @product.name %><br> Product Description: <%= @product.description %><br> Product Price: <%= @product.formatted_price %> </p>

</div>
</div>
</div>

<div id="review">
<div class="Container">
<div class="pull-left">
<h3>Reviews</h3>

  <p>Reviews for Product: <%= @product.name %></p>

  <% @product.reviews.each do |review| %>
    <p>
      <%= review.comment %>
      <br>
      <% if review.user != nil %>
        <em> by <%= review.user.email %></em>
        Added on: <%= review.created_at %>
      <% end %>
    </p>
  <% end %>

</div>
</div>
</div>

  
<table>
  <% if current_user %>
  <h3>New Review</h3>

  <%= form_for([@product, @review]) do |f| %>
    <% if @review.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

        <ul>
        <% @review.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>


  <tr>
    <div class="field">
      <td> <%= f.label :comment %><br /> </td>
      <td> <%= f.text_area :comment %> </td>
    </div>
  </tr>

  <tr>
    <div class="actions">
      <td> <%= f.submit %></td>
    </div>
    </tr>


  <% end %>

<% else %>

</table>

  <p>Please <%= link_to "log in", new_session_path %> to add a review.</p> 
<% end %>

<footer>  
<p>Find me in app/views/products/show.html.erb</p>

</footer>